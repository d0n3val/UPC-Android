<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".NouRegistre">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Introduir nou registre"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textIsSelectable="false"
        android:textSize="35dp" />

    <GridLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:columnCount="1"
        android:rowCount="10"
        android:padding="0dp"
        android:layout_alignParentRight="true">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="Nom"
            android:ems="10"
            android:id="@+id/editText"
            android:layout_column="0"
            android:layout_row="0" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="Cognoms"
            android:ems="10"
            android:id="@+id/editText2"
            android:layout_column="0"
            android:layout_row="1" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Treballa"
            android:id="@+id/checkBox"
            android:layout_column="0"
            android:layout_row="3"
            android:checked="false"
            android:layout_marginLeft="50dp" />

        <RadioGroup
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_row="2"
            android:layout_column="0">

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dona"
                android:id="@+id/radioButton"
                android:layout_row="2"
                android:checked="false"
                android:layout_column="0" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Home"
                android:id="@+id/radioButton2"
                android:checked="false"
                android:layout_column="0" />

        </RadioGroup>

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Estudia"
            android:id="@+id/checkBox2"
            android:layout_column="0"
            android:layout_row="3"
            android:checked="false"
            android:layout_gravity="right"
            android:layout_marginRight="50dp" />

        <Switch
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Estudis Universitaris"
            android:id="@+id/switch1"
            android:checked="false"
            android:layout_gravity="center_horizontal"
            android:layout_row="4"
            android:layout_column="0" />

        <SeekBar
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/seekBar"
            android:max="150"
            android:indeterminate="false"
            android:contentDescription="Edat"
            android:clickable="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Pes"
            android:id="@+id/textView2"
            android:layout_column="0"
            android:layout_row="5"
            android:layout_gravity="center" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="date"
            android:ems="10"
            android:id="@+id/editText3"
            android:layout_column="0"
            android:text="Data naixament"
            android:layout_gravity="center_horizontal"
            android:textAlignment="center" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Registrar"
            android:id="@+id/button"
            android:layout_gravity="center_horizontal"
            android:onClick="ClickRegistrar"
            android:layout_row="8"
            android:layout_column="0" />

    </GridLayout>
</RelativeLayout>
